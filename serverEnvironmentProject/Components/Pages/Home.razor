@page "/"
@inject IJSRuntime JsRuntime
@rendermode InteractiveServer
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="/lib/js/temperaturechart.js"></script>
<script src="/lib/js/airqualitychart.js"></script>
<script src="/lib/js/co2chart.js"></script>
<script src="/lib/js/humiditychart.js"></script>
<style>
    .sidebar-container {
        display: flex;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 250px;
        background-color: #f8f9fa;
        transition: transform 0.5s ease;
        transform: translateX(-250px);
        z-index: 1000;
    }

        .sidebar.show {
            transform: translateX(0);
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            padding: 10px;
        }

        .sidebar a {
            text-decoration: none;
            color: black;
        }

   
    .content-push {
        margin-left: 250px;
    }

    /* Adjust button style */
    .sidebar-button {
        position: fixed;
        top: 10px;
        right: 10px;
        z-index: 1001;
    }

    
    .chart-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .chart {
        flex-basis: calc(50% - 10px); /* Chart styling prøver på at få flex boxes og nice grafer til at se ordenlig ud på pagen */
    }
</style>

@* vores burger menu sidebar *@
<div class="sidebar-container">
    <div class="sidebar @(isSidebarVisible ? "show" : "")">
        <ul>
            <li><a href="/HumidityChart">CO2 Chart</a></li>
            <li><a href="/index">Air Quality Chart</a></li>
            <li><a href="/index">Temperature Chart</a></li>
            <li><a href="/index">Humidity Chart</a></li>
            <li><a href="/">Home</a></li>
        </ul>
    </div>
  @*vores implenation af de forskellige kompotenter vi har oprettet som vi vil have displayet i denne her main page *@
    <div class="content @(isSidebarVisible ? "content-push" : "")">
        <div class="chart-container">
            <a href="/index" class="chart">
                <CO2Chart></CO2Chart>
            </a>
            <a href="/index" class="chart">
                <AirQualityChart></AirQualityChart>
            </a>
            <a href="/index" class="chart">
                <TemperatureChart></TemperatureChart>
            </a>
            <a href="/index" class="chart">
                <HumidityChart></HumidityChart>
            </a>
        </div>
    </div>
</div>

<button class="sidebar-button" @onclick="ToggleSidebar">☰</button> <!-- har flyttet det til højre vi skal lige se hvor vi vil have det til at stå -->
@code {
    // sidebaren
    bool isSidebarVisible = false; // et tjek på om sidebaren er visibile nu by default er den false, vi bruger også denne her  oppe med class chart cotainer
    void ToggleSidebar()
    {
        isSidebarVisible = !isSidebarVisible;
    }

    // denne her rendere vores chart i blazor
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("drawChart", "Air Quality", 50, "AirQuality_chart_div");
            await JsRuntime.InvokeVoidAsync("drawTemperatureChart", "Temperature", 68, "Temperature_chart_div");// fuktionen, parameter til vores navn på grafen, værdien, og dens div id
        }
    }

}
